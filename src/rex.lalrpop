use std::str::FromStr;

grammar;

pub createStmt: String = {
    "create" <l:rexExpr> "or" <r:rexExpr> => format!("{l}|{r}")
}

rexExpr: String = {
    "\"" <s:Str> "\"" => s,
}

Str: String = {
    <s:r"[a-z]+"> => s.to_string()
};

pub Term: i32 = {
    <n:Num> => n,
    "(" <t:Term> ")" => t,
};

Num: i32 = <s:r"[0-9]+"> => i32::from_str(s).unwrap();
